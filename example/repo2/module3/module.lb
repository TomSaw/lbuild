
def init(module):
	module.set_name("module3")

def prepare(module, options):
	module.add_numeric_option(name='counter', description='Counter', default=1)
	return True

def build(env):
	substitutions = {
		'counter': env['::counter'],
	}
	
	env.copy('src/module3.h', 'src/module3.h')
	env.template('src/module3.cpp', 'src/module3.cpp', substitutions=substitutions)
