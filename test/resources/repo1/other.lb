
def init(module):
	module.set_name("other")
	module.set_description("Another module")

def prepare(module, options):
	if options[":target"] == "hosted":
		module.depends([":module1", "repo2:module3"])
	elif options[":target"] == "stm32":
		module.depends(":module1")
	else:
		return False
	
	module.add_option(name="foo", default=123, description="A option")
	module.add_option(name="bar", default=12, description="A second option")
	return True

def build(env):
	env.copy('src', 'src')
	env.copy('test', 'test')
