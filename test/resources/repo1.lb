
def prepare(repo):
	repo.set_name("repo1")
	
	repo.add_modules(repo.glob("repo1/*/module.lb"))
	repo.add_modules("repo1/other.lb")
	
	repo.add_option(
		name="target",
		description="Target architecture for the library.")
	repo.add_numeric_option(
		name="foo",
		default=76,
		description="Something")
